EXECUTABLE = sgb.x
OBJS = @OBJS_SGB@

MACHINE = @MACHINE@
SHELL = @SHELL@
CP = @CP@
RM = @RM@
CD = @CD@
CHMOD = @CHMOD@

CC = @CC@
CPP = @CPP@
F77 = @MODELSUP_F77@
FORT_FLAGS = @MODELSUP_FORT_FLAGS@
LOAD_FLAGS = @MODELSUP_LOAD_FLAGS@
INCLUDE_DIR = @INCLUDE_DIR@
LIB_DIR = @LIBS_DIR@/lib
INSTALL_DIR = @MODEL_DIR@/bin
INSTALLDLIB = @MODEL_DIR@/bin
EXTRA_LIBS = @MODELSUP_EXTRA_LIBS@
EXTRA_LIBS_SGB = 

LIBS = ${INSTALLDLIB}/share.a ${LIB_DIR}/modelib.a ${LIB_DIR}/w3lib.a \
			${EXTRA_LIBS_SGB}

#EXP_PARENT = @EXP_PARENT@
#.DEFAULT :
#	ln -fs ${EXP_PARENT}/src/sgb/$@ $@

${EXECUTABLE} : ${OBJS} ${LIBS}
	if [ @MACHINE@ = mac ] ; then \
		ranlib -s ${LIBS} ; \
	fi
	${F77} ${LOAD_FLAGS} -o $@ ${OBJS} ${LIBS} ${EXTRA_LIBS}
	${CP} $@ ${INSTALL_DIR}

depend :
	${LIB_DIR}/../etc/mkdep

.SUFFIXES : .o .f .F

.F.f :
	${CPP} -P ${INCLUDE_DIR} $*.F >$*.i
#	sed '/^ *$$/d' $*.i >$*.f ; rm $*.i
	sed '/^ *$$/d;s/\/\*/\!/' $*.i >$*.f ; rm $*.i

.F.o :
	${CPP} -P ${INCLUDE_DIR} $*.F >$*.i
#	sed '/^ *$$/d' $*.i >$*.f ; rm $*.i
	sed '/^ *$$/d;s/\/\*/\!/' $*.i >$*.f ; rm $*.i
	${F77} ${FORT_FLAGS} -c $*.f

.f.o :
	${F77} ${FORT_FLAGS} -c $*.f

clean :
	- ${RM} -f *.f *.o *.x core

dist_clean :
	- ${RM} -f *.f *.o *.x core Makefile
	- ${RM} -rf rii_files
